{% extends "layouts/layout-admin.twig" %}

{% block title %}Les utilisateurs{% endblock %}

{% block content %}

{% if users %}

<div class="datatable-container">
    <table id="datatablesSimple" class="datatable-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Prénom Nom</th>
                <th>Email</th>
                <th>Est valide</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{user.id}}</td>
                <td>{{user.firstname}} {{user.lastname}}</td>
                <td>{{user.email}}</td>
                <td>{{user.is_valid}}</td>
                <td class="modify-control">{% if user.is_valid != 1 %}<form
                        action="index.php?action=validateUser&id={{user.id}}" method="post"><button type="submit"><i
                                class="fa fa-check" aria-hidden="true"></i></button></form>{% else %}<div class="space">
                    </div>{% endif %}<form action="index.php?action=deleteUser&id={{user.id}}" method="post"><button
                            type="submit"><i class="fa fa-trash" aria-hidden="true"></i></button></form>
                </td>

            </tr>
            {% endfor %}

        </tbody>
    </table>
</div>

{% else %}

Aucun utilisateur n'a été trouvé.

{% endif %}

{% endblock %}