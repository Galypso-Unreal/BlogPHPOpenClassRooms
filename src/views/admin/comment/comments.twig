{% extends "layouts/layout-admin.twig" %}

{% block title %}Les commentaires{% endblock %}

{% block content %}

{% if comments %}

<div class="datatable-container">
    <table id="datatablesSimple" class="datatable-table">
        <thead>
            <tr>
                <th><a href>ID</a></th>
                <th>Commentaire</th>
                <th>Valid√©</th>
                <th>Utilisateur</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            {% for comment in comments %}
            {% set author = displayAuthor(comment.fk_user_id) %}
            <tr>
                <td>{{comment.id}}</td>
                <td>{{comment.comment}}</td>
                <td>{{comment.is_valid}}</td>
                <td>{{author.firstname}} {{author.lastname}}</td>

                <td class="modify-control">{% if comment.is_valid != 1 %}<form
                        action="index.php?action=validComment&id={{comment.id}}" method="post"><button type="submit"><i
                                class="fa fa-check" aria-hidden="true"></i></button></form>{% else %}<div class="space">
                    </div>{% endif %}<form action="index.php?action=deleteComment&id={{comment.id}}" method="post">
                        <button type="submit"><i class="fa fa-trash" aria-hidden="true"></i></button>
                    </form>
                </td>



            </tr>
            {% endfor %}

        </tbody>
    </table>
</div>

{% else %}

Une erreur est survenu sur la page

{% endif %}

{% endblock %}