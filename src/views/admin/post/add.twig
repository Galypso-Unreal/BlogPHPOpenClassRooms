{% extends "layouts/layout-admin.twig" %}

{% block title %}
Ajouter un post
{% endblock %}

{% block content %}

<div class="row justify-content-center max-width-100">
	<div class="col-lg-6">
		<div class="card shadow-lg border-0 rounded-lg mt-5">
			<div class="card-header">
				<h3 class="text-center font-weight-light my-4">Ajouter un post</h3>
			</div>
			<div class="card-body">
				<form action="index.php?action=addPost" method="post">
					<div class="form-floating mb-3">
						<input type="text" placeholder="titre" name="title" maxlength="80" class="form-control">
						<label for="title">titre</label>
					</div>
					<div class="form-floating mb-3">
						<textarea type="text" placeholder="chapo" name="lead_content" class="form-control"></textarea>
						<label for="lead_content">chapo</label>
					</div>
					<div class="form-floating mb-3">
						<textarea type="text" placeholder="content" name="content" class="form-control"></textarea>
						<label for="content">content</label>
					</div>
					{% if admins %}
					<div class="form-floating mb-3">

						<select name="id_user" class="form-select">
							{% for admin in admins %}
							<option value="{{admin.id}}">{{admin.firstname}}
								{{admin.lastname}}
								({{admin.email}})</option>
							{% endfor %}
						</select>

					</div>
					{% endif %}

					<div class="d-flex align-items-center justify-content-center mt-4 mb-0">

						<button class="btn btn-primary" href="index.html" type="submit">Ajouter le post</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

{% endblock %}