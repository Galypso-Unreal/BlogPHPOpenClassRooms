{% extends "layouts/layout-admin.twig" %}

{% block title %} Ajouter un post {% endblock %}

{% block content %}

<form action="index.php?action=modifyPost&id={{post.id}}" method="post">
    <div class="input">
    <input type="text" placeholder="titre" name="title" maxlength="80" value="{{post.title}}">
    </div>
    <div class="input">
        <input type="text" placeholder="chapo" name="chapo" value="{{post.chapo}}">
    </div>
    <div class="input">
        <textarea name="content" id="" cols="30" rows="10" placeholder="contenu">{{post.content}}</textarea>
    </div>
    {% if admins %}
    <div>
        <select name="id_user">
            {% for admin in admins %}
                <option value="{{admin.id}}" {% if admin.id == post.author.id %} selected {% endif %}>{{admin.firstname}} {{admin.lastname}} ({{admin.email}})</option>
            {% endfor %}
        </select>
    </div>
    {% endif %}
    

    <button type="submit">Mettre Ã  jour</button>
    
</form>

{% endblock %}