{% extends "layouts/layout.twig" %}

{% block title %}Administrateur{% endblock %}

{% block content %}
<div class="container padding-container">
	<div class="row justify-content-center">
		<div class="col-lg-5">
			<div class="card shadow-lg border-0 rounded-lg mt-5">
				<div class="card-header">
					<h3 class="text-center font-weight-light my-4">Administrateur</h3>
				</div>
				<div class="card-body">
					<form action="index.php?action=loginUser" method="post">
                    
						<div class="form-floating mb-3">
							<input class="form-control" id="inputEmail" type="email" name="email"
                            
								placeholder="name@example.com" {% if email %} value={{email}} {% elseif email_rem %} value={{email_rem}} {% endif %} />
							<label for="inputEmail">Email</label>
							{% if errors.email %}<small class="form-errors">{{errors.email}}</small>{% endif %}
						</div>
						<div class="form-floating mb-3">
							<input class="form-control" id="inputPassword" type="password" name="password"
								placeholder="Password" />
							<label for="inputPassword">Mot de passe</label>
							{% if errors.password %}<small class="form-errors">{{errors.password}}</small>{% endif %}
						</div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" id="remember_admin" name="remember_admin" type="checkbox" value="1"/>
                            <label class="form-check-label" for="remember_admin">Se souvenir de moi</label>
                        </div>

						{% if errors.check %}<small class="form-errors">{{errors.check}}</small>{% endif %}
						<div class="d-flex align-items-center justify-content-between mt-4 mb-0">
							<button class="btn btn-primary" type="submit">Se connecter</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}